<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/category_ui_list_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_hand_view_text_size"
        android:textSize="@dimen/category_ui_list_item_text_view_text_size"
        android:text="菜式菜品"/>

    <com.example.hongkuan.cooking.ui.categoryui.view.widget.ChildrenGridView
        android:id="@+id/category_ui_list_item_grid_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4">
    </com.example.hongkuan.cooking.ui.categoryui.view.widget.ChildrenGridView>

</LinearLayout>