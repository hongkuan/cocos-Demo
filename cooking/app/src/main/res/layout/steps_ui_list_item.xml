<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/steps_ui_list_item_icon"
        android:layout_width="@dimen/steps_ui_list_item_icon_layout_width"
        android:layout_height="@dimen/steps_ui_list_item_icon_layout_height"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dp4"/>
    <TextView
        android:id="@+id/steps_ui_list_item_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="left"
        android:text="@string/steps_ui_list_item_step_text"/>

</LinearLayout>