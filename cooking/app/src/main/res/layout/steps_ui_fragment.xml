<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:weightSum="1">

    <include layout="@layout/common_hand_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/steps_ui_fragment_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/steps_ui_fragment_icon_layout_height"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_dp4"/>

            <TextView
                android:id="@+id/steps_ui_fragment_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_ui_fragment_ingredients_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_dp4"/>

            <TextView
                android:id="@+id/steps_ui_fragment_ingredients_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_ui_fragment_ingredients_v_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_dp6"/>

            <TextView
                android:id="@+id/steps_ui_fragment_burden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_ui_fragment_burden_text"/>

            <TextView
                android:id="@+id/steps_ui_fragment_burden_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/steps_ui_fragment_burden_v_layout_marginLeft"
                android:layout_marginRight="@dimen/steps_ui_fragment_burden_v_layout_marginRight"
                android:text="@string/steps_ui_fragment_burden_v_text"/>

            <com.example.hongkuan.cooking.ui.stepsui.view.widget.StepsListView
                android:id="@+id/steps_ui_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>